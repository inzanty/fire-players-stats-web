{% macro paginator(settings) %}
    <ul class="pagination">
        <li class="page-item {% if settings.last == 0 %}disabled{% endif %}">
            <a class="page-link" href="?page={{ settings.last }}" tabindex="-1">Previous</a>
        </li>
        {% for i in 1..settings.pages %}
            <li class="page-item {% if i == settings.page %}active{% endif %}">
                <a class="page-link" href="?page={{ i }}">{{ i }}</a>
            </li>
        {% endfor %}
        <li class="page-item {% if settings.next > settings.pages %}disabled{% endif %}">
            <a class="page-link" href="?page={{ settings.next }}">Next</a>
        </li>
    </ul>
{% endmacro %}